{
  "cpu": {
    "format": " {usage}%",
    "on-click": "alacritty --command btop"
  },

  "disk": {
    "interval": 30,
    "format": " {percentage_used}% ",
    "path": "/",
    "on-click": "alacritty --command btop"
  },

  "group/hardware": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-cpu",
      "transition-left-to-right": false
    },
    "modules": ["cpu", "disk"]
  }
}
